{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "backend",

    "baseUrl": "./backend",
    "typeRoots": ["./node_modules/@types", "./backend/types"],
    "resolveJsonModule": true
  },
  "include": ["backend"],
  "exclude": ["node_modules", "dist"]
}
